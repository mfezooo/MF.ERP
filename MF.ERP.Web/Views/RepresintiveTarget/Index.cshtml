@model RepresintiveTargetVM;
@{
    ViewData["Title"] = "Manage Represintive Targets";
}
<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-justify" id="exampleModalLongTitle"> </h5>

            </div>
            <div class="modal-body">
                <div id="results" typeof="submit" style="overflow:hidden; ">
                    <form method="post" id="frmCreate" class="text-justify">
                        <input type="number" id="cUser" name="cUser" value="@Model.cUser" hidden />
                        <input type="number" id="sId" name="Id" hidden />
                        <div class='col-md-4 col-sm-12'>
                            <div class='form-group'>
                                <label for='Representive'> Representive </label>
                                <select name="RepresentiveId" class="form-control" asp-items="@(new SelectList(@Model.RepresentiveIdList, "Value", "Text"))"></select>
                                <small id='Representive' class='form-text text-muted'>  </small>
                            </div>
                        </div>
                        <div class='col-md-4 col-sm-12'>
                            <div class='form-group'>
                                <label for='Representive'> Tartget Type  </label>
                                <select name="TartgetTypeId" class="form-control" asp-items="@(new SelectList(@Model.TartgetTypeIdList, "Value", "Text"))"></select>
                                <small id='Representive' class='form-text text-muted'>  </small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label class="control-label"> Start Tartget </label>
                                <div class="col-md-12">
                                    <input type="datetime" class="form-control" id="StartTartgetTime" aria-describedby="StartTartgetTime" name="StartTartgetTime"  required>
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label class="control-label"> End Tartget  </label>
                                <div class="col-md-12">
                                    <input type="datetime" class="form-control" id="EndTartgetTime" aria-describedby="EndTartgetTime" name="EndTartgetTime" required>
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label class="control-label"> Amount  </label>
                                <div class="col-md-12">
                                    <input type="number" class="form-control" id="Amount" aria-describedby="Amount" name="Amount" required>
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label class="control-label">Actions</label>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary form-control">
                                        <i class="fa fa-money"></i>Create
                                    </button>
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnSecondary" data-dismiss="modal" onclick="hideModel()"> </button>
                @*<button type="button" class="btn btn-primary btnConfirm" id="btnPrimary"> </button>*@
            </div>
        </div>
    </div>
</div>

@* End Modal*@


<div class="border p-3 mt-4" style="width:100%; overflow-x:scroll;">
    <div class="row pt-4   ">
        <div class="col-10">
            <h2 class=" "> @localizer["RepresintiveTarget"] </h2>
            <button class="btn btn-primary btnAction ">  <i class="fa fa-plus"></i> Create</button>

        </div>
    </div>
    <br />

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    NameAr
                </th>
                <th>
                    NameEn
                </th>
            </tr>

        </thead>
    </table>
</div>
@section Scripts {
    <script src="~/js/coding/represintiveTarget.js"></script>
}